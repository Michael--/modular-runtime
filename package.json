{
  "name": "modular-runtime",
  "version": "0.0.1",
  "private": false,
  "type": "module",
  "description": "Modular, polyglot services for breaking down large local monoliths â€” without Kubernetes or cloud infrastructure. Designed to work together inside embedded environments.",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "clean": "pnpm -r --no-bail --if-present run clean",
    "gen": "pnpm -r --if-present run gen",
    "build": "pnpm -r --if-present run build",
    "test": "pnpm -r --if-present run test",
    "lint": "pnpm -r --if-present run lint",
    "typecheck": "pnpm -r --if-present run typecheck",
    "demo:monolith": "node examples/demo-scenarios/run-monolith.mjs",
    "demo:monolith:run": "pnpm demo:monolith -- --count 100000 --no-checksum",
    "demo:monolith:verify": "pnpm demo:monolith -- --count 100000 --verify",
    "demo:split": "node examples/demo-scenarios/run-split-pipeline.mjs",
    "demo:split:baseline": "pnpm demo:split -- --count 100000 --batch-size 1 --no-build --no-generate",
    "demo:split:batch10": "pnpm demo:split -- --count 100000 --enable-batching --batch-size 10 --no-build --no-generate",
    "demo:split:batch50": "pnpm demo:split -- --count 100000 --enable-batching --batch-size 50 --no-build --no-generate",
    "demo:split:batch100": "pnpm demo:split -- --count 100000 --enable-batching --batch-size 100 --no-build --no-generate",
    "demo:split:batch1000": "pnpm demo:split -- --count 100000 --enable-batching --batch-size 1000 --no-build --no-generate",
    "demo:split:full": "pnpm demo:split -- --count 100000 --enable-batching --batch-size 100",
    "demo:split:polyglot": "pnpm demo:split -- --count 100000 --enable-batching --batch-size 100 --impl polyglot",
    "demo:split:polyglot:baseline": "pnpm demo:split -- --count 100000 --batch-size 1 --impl polyglot --no-build --no-generate",
    "demo:split:polyglot:batch50": "pnpm demo:split -- --count 100000 --enable-batching --batch-size 50 --impl polyglot --no-build --no-generate",
    "demo:split:polyglot:batch100": "pnpm demo:split -- --count 100000 --enable-batching --batch-size 100 --impl polyglot --no-build --no-generate",
    "demo:workload:10000": "pnpm demo:split -- --count 10000 --workload work-items --batch-size 1 --no-build --no-generate",
    "demo:workload:50000": "pnpm demo:split -- --count 50000 --workload work-items --batch-size 1 --no-build --no-generate",
    "demo:workload:100000": "pnpm demo:split -- --count 100000 --workload work-items --batch-size 1 --no-build --no-generate",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "spell": "cspell \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky",
    "ci:prepare": "export PATH=\"$HOME/.cargo/bin:$HOME/go/bin:$PATH\"",
    "cli": "pnpm run ci:prepare && node node_modules/@number10/ci-runner-cli/dist/cli.js --config cli.config.ts",
    "ci": "pnpm run ci:prepare &&  && node ci.js",
    "docs:build": "pnpm -C docs-site build"
  },
  "keywords": [
    "electron",
    "typescript"
  ],
  "author": "Michael Rieck (Michael--) <mr@number10.de>",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=10.28.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@number10/ci-runner-cli": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "cspell": "^9.6.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "ts-proto": "^2.11.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
