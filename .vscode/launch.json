{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Broker",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/broker/dist/broker.js",
      "preLaunchTask": "build",
      "outFiles": ["${workspaceFolder}/packages/broker/dist/**/*.js"],
      "sourceMaps": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Supervisor",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/supervisor/dist/supervisor.js",
      "preLaunchTask": "build-supervisor",
      "outFiles": ["${workspaceFolder}/apps/supervisor/dist/**/*.js"],
      "console": "integratedTerminal"
    }
  ]
}
